<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- Import Materialize CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f3f4f6;
            color: #333;
        }
        .container {
            max-width: 900px;
            margin: 20px auto;
        }
        h3 {
            font-weight: bold;
            color: #2c3e50;
        }
        .card {
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .generate-card {
            background: linear-gradient(135deg, #ff6f61, #ff9671);
            color: white;
            border-radius: 12px;
        }
        .btn-generate {
            background-color: #00c853 !important;
        }
        table {
            margin-top: 20px;
            border-radius: 8px;
            overflow: hidden;
        }
        thead {
            background-color: #ff6f61;
            color: white;
        }
        tbody tr:hover {
            background-color: #ffe0e0;
        }
        .short-id {
            font-weight: bold;
            color: #00b0ff;
        }
        .custom-link {
            color: #d32f2f;
            text-decoration: none;
        }
        .custom-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3 class="center-align">✨ URL Shortener ✨</h3>

        <% if (locals.id) { %>
        <!-- URL Generated Message -->
        <div class="card generate-card">
            <p class="center-align">
                <strong>Generated URL:</strong><br>
                <a class="custom-link" href="https://localhost:8000/url/<%= id %>" target="_blank">
                    https://localhost:8000/url/<%= id %>
                </a>
            </p>
        </div>
        <% } %>

        <!-- Form Section -->
        <div class="card">
            <form method="post" action="/url">
                <div class="input-field">
                    <label for="url">Enter your original URL</label>
                    <input id="url" name="url" placeholder="https://example.com" type="text" required>
                </div>
                <div class="center-align">
                    <button type="submit" class="btn btn-generate waves-effect waves-light">Generate URL</button>
                </div>
            </form>
        </div>

        <!-- Table Section -->
        <% if (locals.urls) { %>
        <table class="highlight centered">
            <thead>
                <tr>
                    <th>Sl. No</th>
                    <th>Short ID</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(urls) && urls.length > 0) { %>
                    <% for (let index = 0; index < urls.length; index++) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td class="short-id"><%= urls[index].shortId || 'N/A' %></td>
                            <td>
                                <a class="custom-link" href="<%= urls[index].requiredUrl || '#' %>" target="_blank">
                                    <%= urls[index].requiredUrl || 'N/A' %>
                                </a>
                            </td>
                            <td><%= urls[index].visitHistory ? urls[index].visitHistory.length : 0 %></td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="center-align">No URLs found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <% } %>
    </div>

    <!-- Import Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
